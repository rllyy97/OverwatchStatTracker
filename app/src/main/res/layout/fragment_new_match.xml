<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/length"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dash"
        android:inputType="number"
        android:nextFocusDown="@id/accuracy"
        android:nextFocusForward="@id/accuracy"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/accuracy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/accuracy"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dash"
        android:inputType="number"
        android:nextFocusDown="@id/sr"
        android:nextFocusForward="@id/sr"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/length"
        app:layout_constraintTop_toTopOf="@+id/length" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/title_new_match"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/mapSpinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapText"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/mapText"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/map"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/heroText"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/hero"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapText" />

    <EditText
        android:id="@+id/deaths"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dash"
        android:inputType="number"
        android:nextFocusDown="@id/damage"
        android:nextFocusForward="@id/damage"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eliminations"
        app:layout_constraintTop_toTopOf="@+id/eliminations" />

    <EditText
        android:id="@+id/healing"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dash"
        android:inputType="number"
        android:nextFocusDown="@id/length"
        android:nextFocusForward="@id/length"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/damage"
        app:layout_constraintTop_toTopOf="@+id/damage" />

    <EditText
        android:id="@+id/damage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dash"
        android:inputType="number"
        android:nextFocusDown="@id/healing"
        android:nextFocusForward="@id/healing"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/healing"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/eliminations"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/dash"
        android:inputType="number"
        android:nextFocusDown="@id/deaths"
        android:nextFocusForward="@id/deaths"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/deaths"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heroText" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/positive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_clear_white_24dp"
        app:backgroundTint="@color/negative"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/sr"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="58sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eliminations"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/eliminations"
        app:layout_constraintEnd_toEndOf="@+id/eliminations"
        app:layout_constraintStart_toStartOf="@+id/eliminations" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deaths"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/deaths"
        app:layout_constraintEnd_toEndOf="@+id/deaths"
        app:layout_constraintStart_toStartOf="@+id/deaths" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/damage"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/damage"
        app:layout_constraintEnd_toEndOf="@+id/damage"
        app:layout_constraintStart_toStartOf="@+id/damage" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/healing"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/healing"
        app:layout_constraintEnd_toEndOf="@+id/healing"
        app:layout_constraintStart_toStartOf="@+id/healing" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/length"
        app:layout_constraintEnd_toEndOf="@+id/length"
        app:layout_constraintStart_toStartOf="@+id/length" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accuracy"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/accuracy"
        app:layout_constraintEnd_toEndOf="@+id/accuracy"
        app:layout_constraintStart_toStartOf="@+id/accuracy" />

    <ImageButton
        android:id="@+id/hero5icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha=".7"
        android:background="@color/transparent"
        android:contentDescription="@string/hero_5"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hero4icon"
        app:layout_constraintTop_toTopOf="@+id/heroText"
        app:srcCompat="@color/transparent" />

    <ImageButton
        android:id="@+id/hero4icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha=".7"
        android:background="@color/transparent"
        android:contentDescription="@string/hero_4"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/hero5icon"
        app:layout_constraintEnd_toStartOf="@+id/hero5icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hero3icon"
        app:layout_constraintTop_toTopOf="@+id/hero5icon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/transparent" />

    <ImageButton
        android:id="@+id/hero3icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha=".7"
        android:background="@color/transparent"
        android:contentDescription="@string/hero_3"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/hero4icon"
        app:layout_constraintEnd_toStartOf="@+id/hero4icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hero2icon"
        app:layout_constraintTop_toTopOf="@+id/hero4icon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/transparent" />

    <ImageButton
        android:id="@+id/hero2icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha=".7"
        android:background="@color/transparent"
        android:contentDescription="@string/hero_2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/hero3icon"
        app:layout_constraintEnd_toStartOf="@+id/hero3icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hero1icon"
        app:layout_constraintTop_toTopOf="@+id/hero3icon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/transparent" />

    <ImageButton
        android:id="@+id/hero1icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha=".7"
        android:background="@color/transparent"
        android:contentDescription="@string/hero_1"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/hero2icon"
        app:layout_constraintEnd_toStartOf="@+id/hero2icon"
        app:layout_constraintStart_toEndOf="@+id/heroText"
        app:layout_constraintTop_toTopOf="@+id/hero2icon"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_add_black_24dp" />

</android.support.constraint.ConstraintLayout>